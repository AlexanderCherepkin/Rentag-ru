{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/media/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2)"
        ]
      }
    }    
  ],
    "dataGroups": [
      {
        "name": "api-prod",
        "urls": ["https://api.rentag.ru/**"],
        "cacheConfig": {
          "strategy": "freshness",
          "maxSize": 100,
          "maxAge": "1h",
          "timeout": "10s"
        }
      },
      {
        "name": "api-dev",
        "urls": ["http://localhost:3000/**"],
        "cacheConfig": {
          "strategy": "performance",
          "maxSize": 50,
          "maxAge": "10m",
          "timeout": "5s"
        }
      }
    ]
}
